<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ThresholdSettingBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ThresholdSetting">

    <include layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1234dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tsCodeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{{tsCode}}预警值设置"
                    android:textAlignment="center"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"
                    android:translationY="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minLowerBoundTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低价下限:"
                    android:textColor="@color/blue_text"
                    android:textSize="21sp"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <EditText
                    android:id="@+id/minLowerBound"
                    android:layout_width="203dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:hint="最低价下限"
                    android:inputType="number"
                    android:textColor="@color/gray_1"
                    android:translationX="40dp"
                    android:translationY="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/incLowerBoundTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="涨幅下限:"
                    android:textColor="@color/blue_text"
                    android:textSize="21sp"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <EditText
                    android:id="@+id/incLowerBound"
                    android:layout_width="203dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:hint="涨幅下限"
                    android:inputType="number"
                    android:textColor="@color/gray_1"
                    android:translationX="60dp"
                    android:translationY="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/decLowerBoundTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跌幅下限:"
                    android:textColor="@color/blue_text"
                    android:textSize="21sp"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <EditText
                    android:id="@+id/decLowerBound"
                    android:layout_width="203dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:hint="跌幅下限"
                    android:inputType="number"
                    android:textColor="@color/gray_1"
                    android:translationX="60dp"
                    android:translationY="10dp" />

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/submit_button"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_rect_3_white"
                android:layoutDirection="locale"
                android:text="设置完成"
                android:textColor="#FFFCFC"
                android:textSize="25sp"
                android:translationY="0dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>