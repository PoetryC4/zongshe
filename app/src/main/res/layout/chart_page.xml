<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chartPage_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ChartPage">

    <include layout="@layout/tool_bar" />
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/chartPage_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:translationY="48dp"
            android:background="@color/gray_1"/>

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="17dp"
            android:translationY="8dp"
            android:text="龙虎榜"
            android:textColor="@color/gray_1"
            android:textSize="23sp"/>
<!--
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="10dp"
            android:translationY="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/fa_chevron_left"
            android:textColor="@color/gray_1"
            android:textSize="23sp"/>-->
    </AbsoluteLayout>
    <TextView
        android:id="@+id/no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray_1"
        android:text="无相关结果" />

    <ScrollView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/resultViewC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:background="@drawable/rounded_button_purple"
                android:id="@+id/pre_arrow"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="上一页"
                android:textSize="15sp"
                android:translationX="80dp"
                android:translationY="30dp">

            </Button>
            <Button
                android:background="@drawable/rounded_button_purple"
                android:id="@+id/post_arrow"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="下一页"
                android:textSize="15sp"
                android:translationX="240dp"
                android:translationY="-10dp">

            </Button>

            <TextView
                android:id="@+id/pageNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="x/?页"
                android:textColor="@color/gray_1"
                android:translationY="-50dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

