<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChangePsw"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/tool_bar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="10dp"
        android:translationY="14dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/fa_chevron_left"
        android:textColor="@color/gray_1"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="35dp"
        android:translationY="-14dp"
        android:text="@string/any_changePSW"
        android:textColor="@color/gray_1"
        android:textSize="23sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:translationY="-2dp"
        android:background="#656565"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="-20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.2"
            android:text="@string/changePSW_new_text"
            android:textColor="@color/blue_text"
            android:textSize="25sp"
            android:translationX="20dp"
            android:translationY="5dp"/>

        <EditText
            android:id="@+id/change_password"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="@string/changePSW_new"
            android:inputType="text"
            android:translationX="130dp"
            android:translationY="-30dp"/>

        <TextView
            android:id="@+id/change_password_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red_feedback"
            android:textSize="12sp"
            android:translationX="130dp"
            android:translationY="43dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="-50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_confirm_password1"
            android:textColor="@color/blue_text"
            android:textSize="25sp"
            android:translationX="20dp"
            android:translationY="5dp"/>

        <EditText
            android:id="@+id/change_confirmPSW"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="@string/changePSW_confirm"
            android:inputType="text"
            android:translationX="130dp"
            android:translationY="-30dp"/>

        <TextView
            android:id="@+id/change_confirmPSW_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red_feedback"
            android:textSize="12sp"
            android:translationX="130dp"
            android:translationY="43dp" />

    </LinearLayout>


    <android.widget.Button
        android:id="@+id/finish_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_button"
        android:layoutDirection="locale"
        android:text="完成密码修改"
        android:textColor="#FFFCFC"
        android:textSize="19sp"
        android:translationY="-30dp"/>
</LinearLayout>