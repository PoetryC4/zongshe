<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".RegisterPage"
    >
    <include layout="@layout/tool_bar" />
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/BG2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/register_BG"
        android:src="@drawable/bg2"
        tools:srcCompat="@drawable/bg2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="60dp"
        android:shadowColor="#3F3F3F"
        android:shadowDx="3"
        android:shadowDy="1.6"
        android:shadowRadius="3"
        android:text="@string/register_page"
        android:textAlignment="center"
        android:textColor="#FFE4E1"
        android:textSize="45sp"/>

</AbsoluteLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1234dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="10dp"
                    android:translationX="30dp"
                    android:text="@string/register_username1"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/register_username"
                    android:layout_width="263dp"
                    android:textColor="@color/gray_1"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:translationX="40dp"
                    android:translationY="10dp"
                    android:autofillHints="name"
                    android:hint="@string/register_username2"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/register_username_feedback"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:translationX="-220dp"
                    android:translationY="35dp"
                    android:textSize="12sp"
                    android:textColor="@color/red_feedback"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="10dp"
                    android:translationX="30dp"
                    android:letterSpacing="0.2"
                    android:text="@string/register_password1"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="263dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:translationX="40dp"
                    android:translationY="10dp"
                    android:textColor="@color/gray_1"
                    android:autofillHints="password"
                    android:hint="@string/register_password2"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/register_password_feedback"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:translationX="-220dp"
                    android:translationY="35dp"
                    android:textSize="12sp"
                    android:textColor="@color/red_feedback"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="10dp"
                    android:translationX="30dp"
                    android:text="@string/register_confirm_password1"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/register_confirmPSW"
                    android:layout_width="263dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:translationX="40dp"
                    android:translationY="10dp"
                    android:textColor="@color/gray_1"
                    android:autofillHints="password"
                    android:hint="@string/register_confirm_password2"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/register_confirmPSW_feedback"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:translationX="-220dp"
                    android:translationY="35dp"
                    android:textSize="12sp"
                    android:textColor="@color/red_feedback"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="10dp"
                    android:translationX="30dp"
                    android:text="@string/register_email1"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="263dp"
                    android:layout_height="46dp"
                    android:textColor="@color/gray_1"
                    android:background="@drawable/edittext_bg_gray"
                    android:translationX="40dp"
                    android:translationY="10dp"
                    android:autofillHints="password"
                    android:hint="@string/register_email2"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/register_email_feedback"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:translationX="-220dp"
                    android:translationY="35dp"
                    android:textSize="12sp"
                    android:textColor="@color/red_feedback"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="10dp"
                    android:translationX="30dp"
                    android:text="@string/register_code1"
                    android:textColor="@color/blue_text"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="183dp"
                    android:layout_height="46dp"
                    android:background="@drawable/edittext_bg_gray"
                    android:translationX="40dp"
                    android:translationY="10dp"
                    android:textColor="@color/gray_1"
                    android:autofillHints="password"
                    android:hint="@string/register_code2"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/register_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="45dp"
                    android:translationY="10dp"
                    android:text="@string/register_send_code"
                    android:textColor="@color/blue_clickable"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/register_code_feedback"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:translationX="-220dp"
                    android:translationY="35dp"
                    android:textSize="12sp"
                    android:textColor="@color/red_feedback"
                    android:text="" />

            </LinearLayout>




            <android.widget.Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/register_button"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:translationY="0dp"
                android:background="@drawable/rounded_button"
                android:layoutDirection="locale"
                android:text="@string/register_submit"
                android:textColor="#FFFCFC"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/go_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="@string/register_go_to_login"
                android:textColor="#3052FF"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>