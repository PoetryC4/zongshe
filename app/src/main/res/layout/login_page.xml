<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".LoginPage"
    >
    <include layout="@layout/tool_bar" />
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/BG1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="@string/login_BG"
            android:src="@drawable/bg"
            tools:srcCompat="@drawable/bg"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#3F3F3F"
            android:shadowDx="3"
            android:shadowDy="1.6"
            android:shadowRadius="3"
            android:text="@string/login_page"
            android:textAlignment="center"
            android:textColor="#FFE4E1"
            android:textSize="46sp"
            android:translationY="60dp"/>

    </AbsoluteLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_username1"
            android:textSize="25sp"
            android:translationY="10dp"
            android:translationX="30dp"
            android:textColor="@color/blue_text"
            />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="263dp"
            android:layout_height="46dp"
            android:background="@drawable/edittext_bg_gray"
            android:autofillHints="name"
            android:hint="@string/login_username2"
            android:textColor="@color/gray_1"
            android:inputType="text"
            android:translationX="40dp"
            android:translationY="10dp"/>

        <TextView
            android:id="@+id/login_username_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="-220dp"
            android:translationY="35dp"
            android:textSize="12sp"
            android:textColor="@color/red_feedback"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.2"
            android:text="@string/login_password1"
            android:textColor="@color/blue_text"
            android:textSize="25sp"
            android:translationY="10dp"
            android:translationX="30dp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="263dp"
            android:layout_height="46dp"
            android:background="@drawable/edittext_bg_gray"
            android:autofillHints="password"
            android:hint="@string/login_password2"
            android:textColor="@color/gray_1"
            android:inputType="text"
            android:translationX="40dp"
            android:translationY="10dp"/>

        <TextView
            android:id="@+id/login_password_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red_feedback"
            android:textSize="12sp"
            android:translationX="-220dp"
            android:translationY="35dp" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/login_password_forgotten"
            android:textColor="@color/blue_clickable"
            android:textSize="14sp"
            android:translationX="-40dp"
            android:translationY="54dp" />
    </LinearLayout>


    <android.widget.Button
        android:id="@+id/login_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:layoutDirection="locale"
        android:text="@string/login_submit"
        android:textColor="#FFFCFC"
        android:textSize="25sp"
        android:translationY="0dp"/>


    <TextView
        android:layout_marginTop="66dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/go_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/login_go_to_register"
        android:textColor="@color/blue_clickable"
        android:textSize="20sp" />


</LinearLayout>